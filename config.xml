<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "businesscard spalshscreen"
        version     = "1.0.0" >
	
    <name>Business card splashscreen</name>
    <description>Business card</description>
    <author email="dominik.adamski@interia.pl">
		Dominik Adamski
	</author>
	
<plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
<gap:splash gap:density="ldpi" gap:platform="android" src="img/ldpi.png" />
<gap:splash gap:density="mdpi" gap:platform="android" src="img/mdpi.png" />
<gap:splash gap:density="hdpi" gap:platform="android" src="img/hdpi.png" />
<gap:splash gap:density="xhdpi" gap:platform="android" src="img/xhdpi.png" />

<icon src="img/ldpi.png" platform="android" qualifier="ldpi" />
<icon src="img/mdpi.png" platform="android" qualifier="mdpi" />
<icon src="img/hdpi.png" platform="android" qualifier="hdpi" />
<icon src="img/xhdpi.png" platform="android" qualifier="xhdpi" />
<icon src="img/xhdpi.png" platform="android" qualifier="xxhdpi" />
<icon src="img/xhdpi.png" platform="android" qualifier="fr-xxhdpi" />


<icon src="img/ldpi.png" platform="android" qualifier="ldpi" />
<icon src="img/ldpi.png" />
	
	
	<platform name="android" />
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />

</widget>